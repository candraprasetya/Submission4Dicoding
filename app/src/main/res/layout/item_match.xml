<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tanggal_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="Tanggal" />

        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_match"
            android:layout_centerHorizontal="true"
            android:text="VS"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Persija"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tanggal_match"
            android:layout_centerVertical="true"
            android:maxWidth="100dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/score_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_match"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/vs"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/name_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Real Madrid"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tanggal_match"
            android:layout_centerVertical="true"
            android:maxWidth="100dp"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/score_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_match"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/vs"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="0" />
    </RelativeLayout>

</android.support.v7.widget.CardView>